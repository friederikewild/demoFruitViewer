<?xml version="1.0" encoding="utf-8"?>
<me.friederikewild.demo.touchnote.overview.EnhancedSwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overviewRefreshLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".overview.OverviewActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dot"
        android:background="@color/colorScreenBackground">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/overviewItemsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/zero"
            tools:listitem="@layout/item_col_layout_list" />

        <!-- Hide hint by default. Shown by view when needed -->
        <TextView
            android:id="@+id/overviewHintNoItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overview_hint_error"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            tools:visibility="visible" />

    </android.support.constraint.ConstraintLayout>

</me.friederikewild.demo.touchnote.overview.EnhancedSwipeRefreshLayout>